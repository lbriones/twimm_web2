<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :password, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :foto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :foto, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :nivel_id, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select(:nivel_id, Nivel.all, :id, :nombre, :prompt => "Seleccione") %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :estado_id, :class => 'control-label' %>
    <div class="controls">
    <%= f.collection_select(:estado_id, Estado.all, :id, :nombre, :prompt => "Seleccione") %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
