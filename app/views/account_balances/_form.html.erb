<%= form_for @account_balance, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :account_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :debit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :debit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :credit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :credit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :value, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :motivo_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :motivo_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                account_balances_path, :class => 'btn' %>
  </div>
<% end %>
