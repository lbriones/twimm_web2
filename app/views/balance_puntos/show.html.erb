<%- model_class = BalancePunto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:usuario_id) %>:</strong></dt>
  <dd><%= @balance_punto.usuario_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:debit) %>:</strong></dt>
  <dd><%= @balance_punto.debit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit) %>:</strong></dt>
  <dd><%= @balance_punto.credit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motivo_id) %>:</strong></dt>
  <dd><%= @balance_punto.motivo_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              balance_puntos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_balance_punto_path(@balance_punto), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              balance_punto_path(@balance_punto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
